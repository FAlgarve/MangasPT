<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_manga_recycler"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_open_book"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_manga_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlaceHolder"
        android:layout_toRightOf="@id/img_manga_recycler"
        android:textColor="@color/Text_grey_color"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/delete_manga_recycler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/edit_manga_recycler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/delete_manga_recycler"
        android:layout_marginRight="15dp"/>

</RelativeLayout>