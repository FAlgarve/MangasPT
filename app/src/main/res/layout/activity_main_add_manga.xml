<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAddManga"
    android:background="@drawable/backgound">

    <androidx.cardview.widget.CardView
        android:id="@+id/ADD_capa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="100dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/card_img_manga"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_open_book"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/add_titulo_manga"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        android:textColorHint="@color/Text_grey_color"
        android:hint="Titulo"
        android:drawablePadding="10dp"
        app:boxStrokeColor="@android:color/holo_blue_dark"
        app:endIconTint="@android:color/holo_blue_dark"
        app:hintTextColor="@android:color/holo_blue_dark"
        app:startIconTint="@color/Text_grey_color" />

    <EditText
        android:id="@+id/add_descricao_manga"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="password_toggle"
        android:textColorHint="@color/Text_grey_color"
        android:hint="Descricao"
        android:drawablePadding="10dp"
        app:boxStrokeColor="@android:color/holo_blue_dark"
        app:endIconTint="@android:color/holo_blue_dark"
        app:hintTextColor="@android:color/holo_blue_dark"
        app:startIconTint="@color/Text_grey_color"/>

    <EditText
        android:id="@+id/add_capitulo_manga"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="50dp"
        app:endIconMode="clear_text"
        android:textColorHint="@color/Text_grey_color"
        android:hint="Capitulos"
        android:drawablePadding="10dp"
        app:boxStrokeColor="@android:color/holo_blue_dark"
        app:endIconTint="@android:color/holo_blue_dark"
        app:hintTextColor="@android:color/holo_blue_dark"
        app:startIconTint="@color/Text_grey_color"/>


    <Button
        android:id="@+id/btn_add_manga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="130dp"
        android:width="250dp"
        android:height="120dp"
        android:fontFamily="@font/ufonts_com_sui_generis_light"
        android:text="Adicionar"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>